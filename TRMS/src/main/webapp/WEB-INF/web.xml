<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
   <servlet>
  	<servlet-name>FrontController</servlet-name>
  	<servlet-class>servlets.FrontControllerServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>Employee</servlet-name>
  	<servlet-class>servlets.EmpServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Requests</servlet-name>
  	<servlet-class>servlets.RequestsServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Reimbursements</servlet-name>
  	<servlet-class>servlets.ReimbursementsServlet</servlet-class>
  </servlet>
  
 
  <servlet-mapping>
  	<servlet-name>FrontController</servlet-name>
  	<url-pattern>/*</url-pattern>  
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>Employee</servlet-name>
  	<url-pattern>/employee</url-pattern>  
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>Employee</servlet-name>
  	<url-pattern>/employee/*</url-pattern>  
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>Requests</servlet-name>
  	<url-pattern>/req</url-pattern>  
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>Requests</servlet-name>
  	<url-pattern>/req/*</url-pattern>  
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>Reimbursements</servlet-name>
  	<url-pattern>/reim</url-pattern>  
  </servlet-mapping>
  
   <servlet-mapping>
  	<servlet-name>Reimbursements</servlet-name>
  	<url-pattern>/reim/*</url-pattern>  
  </servlet-mapping>
</web-app>
